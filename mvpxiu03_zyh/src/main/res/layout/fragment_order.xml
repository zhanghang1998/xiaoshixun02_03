<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dp_46"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <!--订单页面-->
    <LinearLayout
        android:id="@+id/bill_group"
        android:background="@drawable/homefrag_recyclerview_item"
        android:layout_width="@dimen/dp_322"
        android:layout_height="@dimen/dp_102"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_40"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_20"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/bill_image_allbill"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:button="@null"
                android:background="@mipmap/common_icon_all_list_n"
                android:layout_marginLeft="@dimen/dp_3"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部订单"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                android:layout_marginTop="@dimen/dp_10"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/bill_image_pay"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:button="@null"
                android:background="@mipmap/common_icon_pay_n"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待付款"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/bill_image_task"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:button="@null"
                android:background="@mipmap/common_icon_receive_n"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待收货"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/bill_image_appraise"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:button="@null"
                android:background="@mipmap/commom_icon_comment_n"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待评价"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/bill_image_finish"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:button="@null"
                android:background="@mipmap/common_icon_finish_n"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_1"
                />
        </LinearLayout>
    </LinearLayout>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/bill_xrecy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/sp_20"
        android:layout_marginRight="@dimen/sp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/homefrag_recyclerview_item"
        app:layout_constraintTop_toBottomOf="@id/bill_group"
        android:layout_marginTop="@dimen/dp_15"
        android:padding="@dimen/dp_10">

    </com.jcodecraeer.xrecyclerview.XRecyclerView>

</LinearLayout>
