<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/homefrag_recyclerview_item"
    android:padding="20dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textName_myMessage_rlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_weight="1"
            android:text="TextView" />

        <TextView
            android:id="@+id/textPhone_myMessage_rlist"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>

    <TextView
        android:id="@+id/textAddress_count_myMessage_rlist"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#666666"
        android:text="TextView" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="设为默认地址" />

        <TextView
            android:id="@+id/textView_updata_address"
            android:background="@drawable/fragment_my_address_text_bg"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="#666666"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:text="修改" />

        <TextView
            android:id="@+id/textView_delete_address"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="#666666"
            android:background="@drawable/fragment_my_address_text_bg"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:text="删除" />
    </LinearLayout>

</LinearLayout>